<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- PostgreSQL database configuration -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost/personSkill</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">1234567890</property>


        <!-- Configure session context -->
        <property name="hibernate.current_session_context_class">thread</property>

        <!-- Set the show_sql property to true if you want to see the SQL statements in the console -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.id.new_generator_mappings">true</property>


        <property name="hibernate.hbm2ddl.auto">update</property>

    </session-factory>

</hibernate-configuration>
